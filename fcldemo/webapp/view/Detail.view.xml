<mvc:View
    controllerName="fcldemo.fcldemo.controller.Detail"
    xmlns="sap.uxap"
	xmlns:m="sap.m"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc">
    <ObjectPageLayout
		id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		alwaysShowContentHeader="false"
		preserveHeaderStateOnScroll="false"
		headerContentPinnable="true"
		isChildPage="true"
		upperCaseAnchorBar="false">
        <headerTitle>
			<ObjectPageDynamicHeaderTitle>
				<expandedHeading>
					<m:Title text="{employee>FullName}" wrapping="true" class="sapUiSmallMarginEnd"/>
				</expandedHeading>
				<actions>
					<m:ToggleButton
						icon="sap-icon://edit"
						type="Transparent"
                        press=".onEditToggleButtonPress"/>
					<m:Button
						icon="sap-icon://add-activity"
						type="Transparent"
						press="onStillToDo"/>
					<m:Button
						icon="sap-icon://delete"
						type="Transparent"
						press="onDeleteEmployee"/>
					<m:Button
						icon="sap-icon://download"
						type="Transparent"
						press="onStillToDo"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>
        <headerContent>
			<m:FlexBox wrap="Wrap" fitContainer="true" alignItems="Stretch">
				<f:Avatar
					displaySize="L"
					displayShape="Square"
					class="sapUiTinyMarginEnd">
				</f:Avatar>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Department:"/>
					<m:Text text="{employee>Department}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Title:"/>
					<m:Text text="{employee>Title}"/>
				</m:VBox>
				<m:VBox justifyContent="Center" class="sapUiSmallMarginEnd">
					<m:Label text="Role:"/>
					<m:Text text="{employee>Role}"/>
				</m:VBox>
			</m:FlexBox>
		</headerContent>

        <sections>
			<ObjectPageSection title="General Information">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm
								id="editEmployeeText"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1"
								visible="true">
								<form:content>
									<m:Label text="Name"/>
									<m:Text text="{employee>FullName}"/>
									<m:Label text="Department"/>
									<m:Text text="{employee>Department}"/>
									<m:Label text="Title"/>
									<m:Text text="{employee>Title}"/>
									<m:Label text="Role"/>
									<m:Text text="{employee>Role}"/>
									<m:Label text="Industries"/>
									<m:Text text="{employee>Industries}"/>
									<m:Label text="Direct Report"/>
									<m:Text text="{employee>DirectReport}"/>
									<m:Label text="Start Date"/>
									<m:Text text="{employee>StartDate}"/>
									<m:Label text="Email"/>
									<m:Text text="{employee>Email}"/>
								</form:content>
							</form:SimpleForm>
							<form:SimpleForm
								id="editEmployeeForm"
								maxContainerCols="2"
								editable="false"
								layout="ResponsiveGridLayout"
								labelSpanL="12"
								labelSpanM="12"
								emptySpanL="0"
								emptySpanM="0"
								columnsL="1"
								columnsM="1"
								visible="false">
								<form:content>
									<m:Label text="Name"/>
									<m:Input value="{employee>FullName}"/>
									<m:Label text="Department"/>
									<m:Input value="{employee>Department}"/>
									<m:Label text="Title"/>
									<m:Input value="{employee>Title}"/>
									<m:Label text="Role"/>
									<m:Input value="{employee>Role}"/>
									<m:Label text="Industries"/>
									<m:Input value="{employee>Industries}"/>
									<m:Label text="Direct Report"/>
									<m:Input value="{employee>DirectReport}"/>
									<m:Label text="Start Date"/>
									<m:Input value="{employee>StartDate}"/>
									<m:Label text="Email"/>
									<m:Input value="{employee>Email}"/>
								</form:content>
							</form:SimpleForm>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Skills">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="skillsTable"
								items="{path : 'employee>AssignedSkills'}">
								<m:columns>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Navigation" press=".onSkillPress">
										<m:cells>
											<m:ObjectIdentifier text="{employee>SkillTitle}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Awards">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Table
								id="awardsTable"
								items="{path : 'employee>Awards'}">
								<m:columns>
									<m:Column/>
									<m:Column/>
									<m:Column/>
								</m:columns>
								<m:items>
									<m:ColumnListItem>
										<m:cells>
											<m:ObjectIdentifier text="{employee>AwardName}"/>
											<m:ObjectIdentifier text="{employee>ReceivedFrom}"/>
											<m:ObjectIdentifier text="{employee>DateGiven}"/>
										</m:cells>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection title="Blog Posts">
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<m:Link 
								text="Here are some blog posts I've written"
								target="_blank"
								href="http://blogs.sap.com/"
							/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>

        <footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Accept" text="Save"/>
				<m:Button type="Reject" text="Cancel"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
</mvc:View>