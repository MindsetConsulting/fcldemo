<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:layout="sap.ui.layout"
   xmlns:form="sap.ui.layout.form"
   xmlns:core="sap.ui.core" >
   <Dialog
      id="editEmployeeDialog"
      title="Edit Employee">
      <layout:HorizontalLayout>
        <layout:VerticalLayout>
            <form:SimpleForm
                maxContainerCols="2"
                editable="false"
                layout="ResponsiveGridLayout"
                labelSpanL="12"
                labelSpanM="12"
                emptySpanL="0"
                emptySpanM="0"
                columnsL="1"
                columnsM="1">
                <form:content>
                    <Label text="Name"/>
                    <Input value="{employee>FullName}"/>
                    <Label text="Department"/>
                    <Input value="{employee>Department}"/>
                    <Label text="Title"/>
                    <Input value="{employee>Title}"/>
                    <Label text="Role"/>
                    <Input value="{employee>Role}"/>
                    <Label text="Industries"/>
                    <Input value="{employee>Industries}"/>
                    <Label text="Direct Report"/>
                    <Input value="{employee>DirectReport}"/>
                    <Label text="Start Date"/>
                    <Input value="{employee>StartDate}"/>
                    <Label text="Email"/>
                    <Input value="{employee>Email}"/>
                </form:content>
            </form:SimpleForm>
        </layout:VerticalLayout>
      </layout:HorizontalLayout>
      <beginButton>
         <Button
            text="Save Changes"
            type="Emphasized"
            press="onSaveEditEmployee"/>
      </beginButton>
      <endButton>
      <Button
        text="Cancel"
        press=".onCloseEditDialog"/>
      </endButton>
   </Dialog>
</core:FragmentDefinition>