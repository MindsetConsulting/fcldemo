<mvc:View
	controllerName="fcldemo.fcldemo.controller.App"
	displayBlock="true"
	height="100%"
	xmlns="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
		<FlexibleColumnLayout 
			id="flexibleColumnLayout" 
			stateChange=".onStateChanged" 
			backgroundDesign="Solid"
			layout="{/layout}">
            <beginColumnPages>
			    <mvc:XMLView id="beginView" viewName="fcldemo.fcldemo.view.Master"/>
		    </beginColumnPages>
            <midColumnPages>
                <mvc:XMLView id="detailView" viewName="fcldemo.fcldemo.view.Detail"/>
            </midColumnPages>
        </FlexibleColumnLayout>
</mvc:View>